    %script{:src => '/javascripts/jquery.js', :type => 'text/javascript'}
    %script{:src => '/javascripts/application.js', :type => 'text/javascript'}
    
  %body
    #wrapper
      #header
        %h1= link_to "/", "<span class=\"accent\">K</span>evin <span class=\"accent\">M</span>cPhillips"
      #sidebar
        #nav
          %ul
            - PAGES.each do |page|
              %li= link_to "/#{page}", "# #{page.to_s.capitalize}"
          
        #nav-graphic
          -# TODO
      
      #content= yield
