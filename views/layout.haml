!!!
%html
  %head
    %title= TITLE + (@title ? " :: #{@title}" : "")
    %link{:href => '/stylesheet.css', :rel => 'stylesheet', :type => 'text/css'}
    %script{:src => '/javascripts/jquery.js', :type => 'text/javascript'}
    %script{:src => '/javascripts/application.js', :type => 'text/javascript'}
    
    = yield_content :js
  
    :javascript    
      $(document).ready(function($) {
        #{yield_content :js_ready}
      });
    
  %body
    #wrapper
      #sidebar
        #nav
          %ul
            - PAGES.each do |page|
              %li= link_to "/#{page}", "# #{page.to_s.capitalize}"

      #header
        %h1= link_to "/", "<span class=\"accent\">K</span>evin <span class=\"accent\">M</span>cPhillips"
        
      #sub-header
        %h2 Rails Developer
      
      #content= yield

      - unless @skip_footer
        #footer
          %p
            = rot13email(EMAIL, "Contact me")
            = " :: "
            &copy;
            = Time.now.year
