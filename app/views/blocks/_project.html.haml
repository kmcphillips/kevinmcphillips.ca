%h3.name= project.name
%h4.url= link_to(project.url, project.url)
.clear.spacer

= link_to(image_tag(project.img, :alt => project.name), project.url) unless project.img.blank?
.description
  %p= simple_format project.description
  %h5.url= link_to("GOTO source code", project.source_url) unless project.source_url.blank?

.clear
