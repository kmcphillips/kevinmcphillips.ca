!!!
%html
  %head
    %title= TITLE + (@title ? " :: #{@title}" : "")

    = stylesheet_link_tag :stylesheet

    - ['jquery.js', 'jquery.tweet.js', 'application.js'].each do |file|
      %script{:src => "/javascripts/#{file}", :type => 'text/javascript'}

    = feed_tag(:rss, "/feed.rss", :title => "RSS")
    
    = yield_content :js
  
    :javascript    
      $(document).ready(function($) {
        #{yield_content :js_ready}
      });
    
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-18310332-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    #wrapper
      #sidebar
        #nav
          %ul.nav
            %li= link_to "# Blog", "/"
            - PAGES.each do |page|
              %li= link_to "# #{page.to_s.capitalize}", "/#{page}"
        #tweet
          %ul.nav
            %li= link_to "# Twitter", "http://twitter.com/kmcphillips"
          .tweet
          
      #header
        %h1= link_to "<span class=\"accent\">K</span>evin <span class=\"accent\">M</span>cPhillips", "/"
        
      #sub-header
        %h2 Rails Developer
      
      #content= yield

      - unless @skip_footer
        #footer
          %p
            = link_to "RSS", "/feed.rss"
            = link_to image_tag("/images/icons/rss.png", :alt => "RSS"), "/feed.rss"
            = " :: "
            = rot13email(EMAIL, "Email me")
            = " :: "
            &copy;
            = Time.now.year
