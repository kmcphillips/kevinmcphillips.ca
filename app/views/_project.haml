%h3.name= project.name
%h4.url= link_to(project.url, project.url)
.clear.spacer

= link_to(image_tag(project.image_path, :alt => project.name), project.url) unless project.image_path.blank?
.description
  %p= nl2br project.description
  %h5.url= link_to("GOTO source code", project.source_url) unless project.source_url.blank?

.clear
